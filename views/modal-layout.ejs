<!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
    Launch demo modal
  </button>
  
  <!-- Modal -->
  <div class="event-modal" tabindex="-1" role="dialog">
    <div class="event-modal-dialog" role="document">
      <div class="event-modal-content">
        <!-- modal header -->
        <div class="event-modal-header">
          <h2 class="event-modal-title">Add Event</h2>
          <button type="button" class="close" data-dismiss="event-modal" aria-label="Close">
            <i class="bi bi-x-lg"></i>
          </button>
        </div>
        <!-- modal-body -->
        <%- include('partials/modal') -%>
      <!-- modal-footer -->
      <div class="event-modal-footer">
        <div class="button-group">
          <button type="button" class="tertiary-button" data-dismiss="event-modal">Cancel</button>
          <button type="button" class="primary-button">Save changes</button>
        </div>
      </div>
    </div>
</div>