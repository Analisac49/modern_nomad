<button id="openModalButton">Open Modal</button>

<div class="event-modal" tabindex="-1" role="dialog">
  <div class="event-modal-dialog" role="document">
    <div class="event-modal-content">
      <div class="event-modal-header">
        <h2 class="event-modal-title">Add Event</h2>
        <button type="button" class="close" data-dismiss="event-modal" aria-label="Close">
          <i class="bi bi-x-lg"></i>
        </button>
      </div>
      <div class="event-modal-body">
        <!-- Event Name -->
        <label for="eventName">Event Name</label>
        <input type="text" id="eventName" name="eventName" required />

        <div class="datetime-group">
          <div class="datetime date">
            <label for="eventDate">Date:</label>
            <input type="date" id="eventDate" name="eventDate" required>
          </div>
          <div class="datetime time">
            <label for="startTime">Start Time:</label>
            <input type="time" id="startTime" name="startTime" min="00:00" max="23:59">
          </div>
          <div class="datetime time">
            <label for="startTime">End Time:</label>
            <input type="time" id="endTime" name="startTime" min="00:00" max="23:59">
          </div>
        </div>
        <!-- Description -->
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4" required></textarea>
      </div>
    </div>
    <div class="event-modal-footer">
      <div class="button-group">
        <button type="button" class="tertiary-button" data-dismiss="event-modal">Cancel</button>
        <button type="button" class="primary-button">Save changes</button>
      </div>
    </div>
  </div>
</div>
